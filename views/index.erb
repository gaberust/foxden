<div class="container" style="max-width:650px;">
  <% unless @username.nil? %>
    <fieldset>
      <legend>New Post</legend>
      <div class="form-group">
        <textarea class="form-control" id="newPost" rows="3" style="margin-top:0px;margin-bottom:0px;he>      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="postButton">Post</button>
      </div>
    </fieldset>
    <hr>
  <% end %>
  <div id="postFeed">
    <% unless @posts.nil? %>
      <% @posts.each do |post| %>
        <div class="card border-primary mb-3" data-pid="<%= post.post_id.to_s %>">
          <div class="card-header pt-4 pl-4">
            <span style="display: flex; flex-direction: row; align-items: center;"><img src="/static/img/profile/<%= post.author %>.png" class="img-thumbnail rounded-circle" >
            <a href="/profile/<%= post.author %>" class="ml-4"><%= post.author %></a></span>
            <p class="mt-4 ml-2"><%= post.date %></p>
          </div>
          <div class="card-body">
            <p class="card-text">
              <%= post.content.gsub("\n", "<br>") %>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <button id="showMore" class="btn btn-primary">Show More...</button>
  <br>
  <br>
  <br>
</div>
